{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "scripts",
    "initDb.ts",
    "knexfile.ts"
  ]
}
